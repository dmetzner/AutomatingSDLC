{% if user %}
<div class="follower-item-{{ user.id }}">
  <div class="row no-gutters">
    <div class="col-2 my-auto">
      <a href="{{ path('profile', { "id" : user.id }) }}">
        <img class="img-fluid round"
             src="{% if user.avatar is not empty %}{{ user.avatar }}
                          {% else %}{{ asset('images/default/avatar_default.png') }}{% endif %}"
             alt="User Image">
      </a>
    </div>
    <div class="col-6 pl-3 my-auto">
      <a href="{{ path('profile', { "id" : user.id }) }}">
        <span class="h4">{{ user.username }}</span>
        <div class="text-dark">
          <span>{{ user.projects }} {{ "follower.amountOfPrograms"|trans({}, "catroweb") }}</span>
        </div>

        <div class="text-muted text-uppercase follower-item__info">
          {% if user.country %}
            <div class="d-inline mr-2"><i class="fas fa-map-marker"></i> {{ user.country }}</div>
          {% endif %}
          {% if app.user != null and app.user.hasFollower(user.profile) %}
            <div class="d-inline">
              <i class="fas fa-check"></i> {{ "follower.followsMe"|trans({}, "catroweb") }}
            </div>
          {% endif %}
        </div>
      </a>
    </div>
    <div class="col-4 text-right my-auto">
      {% if app.user != null and app.user.id != user.id %}
      <div class="follow-button">
        <button class="btn btn-outline-primary btn-block unfollow-btn mt-0"
                style="{{ user.profile.hasFollower(app.user) ? 'display: block' : 'display:none' }}"
                onclick="followers.unfollow('{{ user.id }}','{{ user.username }}')">
          {{ 'follower.follows'|trans({}, 'catroweb') }}
        </button>
        <button class="btn btn-primary btn-block follow-btn mt-0"
                style="{{ user.profile.hasFollower(app.user) ? 'display: none' : 'display:block' }}"
                onclick="followers.follow('{{ user.id }}')">
          {{ 'follower.follow'|trans({}, 'catroweb') }}
        </button>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endif %}
